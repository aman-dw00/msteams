      "spacing": "Medium",
      "separator": true
    },
    {
      "type": "TextBlock",
      "text": "@{replace(replace(replace(triggerBody()?['text'], '\nLabels:', '\n\n🔹 **Labels:**\n'), '\nAnnotations:', '\n\n📝 **Annotations:**\n'), '\nSource:', '\n\n🔗 **Source:** ')}",
      "wrap": true,
      "spacing": "Medium"
    }
  ],
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "🔗 View Alert 1",
